import util.assert
import math

def EPSILON = 1e-10

assert_nearly sin(0.0), 0.0, EPSILON
assert_nearly cos(0.0), 1.0, EPSILON
assert_nearly tan(0.0), 0.0, EPSILON
assert_nearly atan(0.0), 0.0, EPSILON
assert_nearly asin(0.0), 0.0, EPSILON
assert_nearly acos(1.0), 0.0, EPSILON
assert_nearly exp(0.0), 1.0, EPSILON
assert_nearly log(1.0), 0.0, EPSILON

let c0_0 = Complex(0.0, 0.0)
let c1_0 = Complex(1.0, 0.0)

assert_nearly sin(c0_0), c0_0, EPSILON
assert_nearly cos(c0_0), c1_0, EPSILON
assert_nearly tan(c0_0), c0_0, EPSILON
assert_nearly atan(c0_0), c0_0, EPSILON
assert_nearly asin(c0_0), c0_0, EPSILON
assert_nearly acos(c1_0), c0_0, EPSILON
assert_nearly exp(c0_0), c1_0, EPSILON
assert_nearly log(c1_0), c0_0, EPSILON
